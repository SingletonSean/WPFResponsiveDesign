            <components:UserCard Margin="10" Username="Mary12" Age="50" FavoriteColor="Green"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Top"
                behaviors:ResponsivenessBehavior.HorizontalBreakpoint="800">
            <components:UserCard Margin="10" Username="SingletonSean" Age="75" FavoriteColor="Blue"/>
            <components:UserCard Margin="10" Username="LeBron23" Age="18" FavoriteColor="Red"/>
            <components:UserCard Margin="10" Username="Mary12" Age="50" FavoriteColor="Green"/>
            <components:UserCard Margin="10" Username="Mary12" Age="50" FavoriteColor="Green"/>
            <components:UserCard Margin="10" Username="Mary12" Age="50" FavoriteColor="Green"/>
            <components:UserCard Margin="10" Username="Mary12" Age="50" FavoriteColor="Green"/>
            <components:UserCard Margin="10" Username="Mary12" Age="50" FavoriteColor="Green"/>
        </StackPanel>
    </StackPanel>
</UserControl>
